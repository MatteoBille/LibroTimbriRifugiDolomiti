<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mountainRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/mountain_rating_bar</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">25dip</item>
        <item name="android:max">10</item>
        <item name="android:numStars">10</item>
        <item name="android:stepSize">0.2</item>
        <item name="android:scaleY">1.2</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>